{
  "name": "deployment-utility",
  "version": "1.0.0",
  "description": "A utility that takes a container image url and deploys it to Kubernetes.",
  "main": "index.js",
  "scripts": {
    "start": "babel-node index.js",
    "dev": "nodemon --exec babel-node index.js",
    "test": "jest --forceExit --detectOpenHandles || true",
    "test-dev": "jest --watch --detectOpenHandles || true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/123MwanjeMike/deployment-utility.git"
  },
  "keywords": [
    "deployment",
    "utility",
    "Kubernetes"
  ],
  "author": "Mike Mwanje",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/123MwanjeMike/deployment-utility/issues"
  },
  "homepage": "https://github.com/123MwanjeMike/deployment-utility#readme",
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "eslint": "^7.31.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1"
  },
  "dependencies": {
    "babel-cli": "^7.0.0-beta.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jest": "^27.0.6"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/",
      "/.circleci/",
      "/client/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
